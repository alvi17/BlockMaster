<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ibcr.blockmaster">
    <uses-permission android:name="android.permission.VIBRATE" />
    <supports-screens android:normalScreens="true" android:smallScreens="true" android:largeScreens="true" android:resizeable="true" android:anyDensity="true" android:xlargeScreens="true"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/iconinger_v2"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ibcr.blockmaster.activities.MainActivity"
            android:configChanges="orientation|screenLayout|screenSize"
            android:icon="@drawable/iconinger_v2"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ibcr.blockmaster.activities.GameActivity"
            android:label="@string/title_activity_game"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="ibcr.blockmaster.activities.SettingsActivity"
            android:icon="@drawable/ic_settings"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="ibcr.blockmaster.activities.AdvancedSettingsActivity"
            android:icon="@drawable/ic_settings"
            android:label="@string/pref_category_advanced" >
        </activity>
        <activity
            android:name="ibcr.blockmaster.activities.AboutActivity"
            android:icon="@drawable/iconinger_v2"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name="ibcr.blockmaster.activities.HelpActivity"
            android:label="@string/title_activity_help" >
        </activity>

